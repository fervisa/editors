%h1 Documents#index
%table
  %thead
    %tr
      %th Document
      %th Pages
      %th
  %tbody
    - @documents.each do |document|
      %tr
        %td= document.id
        %td= document.pages.size
        %td= link_to 'Edit', "/editor#{ document_path(document) }"

.actions
  = link_to 'New document', new_document_path
  = link_to 'Return to index', root_path
